<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:background="@drawable/counter">

        <ImageView
            android:id="@+id/detailImage"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:contentDescription="@string/detail_image_desc"
            android:scaleType="centerCrop"
            android:src="@drawable/guitar" />

        <TextView
            android:id="@+id/detailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Item Name"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detailRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Rating: 4.5"
            android:textSize="18sp" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="243dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginTop="36dp"
            android:isIndicator="true"
            android:numStars="5"

            android:rating="3.5"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:stepSize="0.1"
            />




        <TextView
            android:id="@+id/detailPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Price: $50"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/detailDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            android:text="Description of the item goes here."
            android:textSize="16sp"
            android:textColor="#666666" />

        <!-- TextView for Displaying User Credit -->
        <TextView
            android:id="@+id/userCreditTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Your Credit: $120"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- TextView to Display Selected Duration -->
        <TextView
            android:id="@+id/selectedDurationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Duration: 1 month"
            android:textSize="16sp" />

        <!-- SeekBar for Selecting Duration -->
        <SeekBar
            android:id="@+id/durationSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="12"
            android:progress="1"
            android:backgroundTint="@color/button"/>

        <!-- Horizontal Layout for Save and Cancel Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/save"
                android:backgroundTint="@color/detail"/>

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/cancel"
                android:backgroundTint="@color/detail"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
